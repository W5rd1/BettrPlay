<div class="row">
  <div class="sidebar">
    <div class="row search-gamer-tag">
      <div class="col-xs-12">
        <h4 class="sidebar-card-title">Games</h4>
        <%= form_tag(challenges_path, method: "get") do %>
        <div class="col-xs-12 games-list">
          <%= radio_button_tag(:game, "CS:GO") %>
          <%= label_tag(:game, "CS:GO", class: "margin-right") %><span class="float-right badge round"><%=  @challenges.where(game: "CS:GO").count%></span>
        </div>
        <div class="col-xs-12 games-list">
          <%= radio_button_tag(:game, "Fifa") %>
          <%= label_tag(:game, "Fifa", class: "margin-right") %><span class="float-right badge round"><%=  @challenges.where(game: "FIFA").count%></span>
        </div>
        <div class="col-xs-12 games-list">
          <%= radio_button_tag(:game, "FortNite") %>
          <%= label_tag(:game, "FortNite", class: "margin-right") %><span class="float-right badge round"><%=  @challenges.where(game: "FortNite").count%></span>
        </div>
        <div class="col-xs-12 games-list">
          <%= radio_button_tag(:game, "COD") %>
          <%= label_tag(:game, "COD", class: "margin-right") %><span class="float-right badge round"><%=  @challenges.where(game: "COD").count%></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="min-max">
          <%= text_field_tag :min, params[:min], placeholder: "Min", class: "form-control min-field" %>
          <%= text_field_tag :max, params[:max], placeholder: "Max", class: "form-control max-field" %>
        </div>
      </div>

    </div>
    <div class="row">
      <div class="col-md-12">
        <%= text_field_tag :tag, params[:tag], placeholder: "#Gamer Tag", class: "form-control search-gamer-tag" %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <%= submit_tag "Search", class: "btn btn-primary search-gamer-tag" %>
      </div>
      <div class="col-xs-6">
        <%= link_to("Clear", challenges_path, class: "btn btn-link search-gamer-tag") %>
        <% end %>
      </div>

    </div>
    </div>
 <!-- form-check.// -->

</div>
