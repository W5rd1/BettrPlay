<div class="container-deposit">
  <div class="deposit-form-container">
    <div class="deposit-form">
  <h1>Deposit</h1>
      <%= form_tag deposits_path(@deposit), id:"deposit-form" do %>
        <p>Input the amount you would like to deposit</p>
        <div class="row"><%= number_field_tag('amount', value = 0, options = { min: 1, max: 3000 }) %></div>
        <div class="row"><%= submit_tag 'Deposit', class: 'btn btn-primary', class: "desposit-btn"  %></div>
      <% end %>
    </div>
  </div>
  <img src="https://upload.wikimedia.org/wikipedia/commons/5/5a/SNES-controller.png" alt="">
</div>
